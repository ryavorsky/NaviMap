<?xml version="1.0" encoding="UTF-8"?>
<project name="navimap" default="all">
  
  
  <property file="navimap.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
    <exclude name="**/.tox/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.ear"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.swc"/>
    <include name="*.ane"/>
    <include name="*.egg"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.android_api_17_platform" value="${jdk.home.android_api_17_platform}/../../jdk1.7.0_45/bin"/>
  <path id="jdk.classpath.android_api_17_platform">
    <fileset dir="${jdk.home.android_api_17_platform}">
      <include name="platforms/android-17/android.jar"/>
      <include name="platforms/android-17/data/res"/>
    </fileset>
  </path>
  
  <property name="jdk.bin.android_2.2_google_apis" value="${jdk.home.android_2.2_google_apis}/../../jdk1.7.0_45/bin"/>
  <path id="jdk.classpath.android_2.2_google_apis">
    <fileset dir="${jdk.home.android_2.2_google_apis}">
      <include name="platforms/android-8/android.jar"/>
      <include name="add-ons/addon-google_apis-google-8/libs/maps.jar"/>
      <include name="platforms/android-8/data/res"/>
      <include name="tools/support/annotations.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.7}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.7}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.7"/>
  
  
  <!-- Project Libraries -->
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module google-play-services_lib -->
  
  <dirname property="module.google-play-services_lib.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.google-play-services_lib" value="${jdk.home.android_2.2_google_apis}"/>
  <property name="module.jdk.bin.google-play-services_lib" value="${jdk.bin.android_2.2_google_apis}"/>
  <property name="module.jdk.classpath.google-play-services_lib" value="jdk.classpath.android_2.2_google_apis"/>
  
  <property name="compiler.args.google-play-services_lib" value="-encoding windows-1251 -source 1.6 ${compiler.args}"/>
  
  <property name="google-play-services_lib.output.dir" value="${module.google-play-services_lib.basedir}/classes/production/google-play-services_lib"/>
  <property name="google-play-services_lib.testoutput.dir" value="${module.google-play-services_lib.basedir}/classes/test/google-play-services_lib"/>
  
  <path id="google-play-services_lib.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="google-play-services_lib.module.production.classpath">
    <path refid="${module.jdk.classpath.google-play-services_lib}"/>
  </path>
  
  <path id="google-play-services_lib.runtime.production.module.classpath">
    <pathelement location="${google-play-services_lib.output.dir}"/>
  </path>
  
  <path id="google-play-services_lib.module.classpath">
    <path refid="${module.jdk.classpath.google-play-services_lib}"/>
    <pathelement location="${google-play-services_lib.output.dir}"/>
  </path>
  
  <path id="google-play-services_lib.runtime.module.classpath">
    <pathelement location="${google-play-services_lib.testoutput.dir}"/>
    <pathelement location="${google-play-services_lib.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.google-play-services_lib">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.google-play-services_lib">
    <patternset refid="excluded.from.module.google-play-services_lib"/>
  </patternset>
  
  <path id="google-play-services_lib.module.sourcepath">
    <dirset dir="${module.google-play-services_lib.basedir}/../google-play-services_lib">
      <include name="src"/>
      <include name="gen"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.google-play-services_lib" depends="compile.module.google-play-services_lib.production,compile.module.google-play-services_lib.tests" description="Compile module google-play-services_lib"/>
  
  <target name="compile.module.google-play-services_lib.production" depends="register.custom.compilers" description="Compile module google-play-services_lib; production classes">
    <mkdir dir="${google-play-services_lib.output.dir}"/>
    <javac2 destdir="${google-play-services_lib.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.google-play-services_lib}/javac">
      <compilerarg line="${compiler.args.google-play-services_lib}"/>
      <bootclasspath refid="google-play-services_lib.module.bootclasspath"/>
      <classpath refid="google-play-services_lib.module.production.classpath"/>
      <src refid="google-play-services_lib.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.google-play-services_lib"/>
    </javac2>
    
    <copy todir="${google-play-services_lib.output.dir}">
      <fileset dir="${module.google-play-services_lib.basedir}/../google-play-services_lib/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.google-play-services_lib.basedir}/../google-play-services_lib/gen">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.google-play-services_lib.tests" depends="register.custom.compilers,compile.module.google-play-services_lib.production" description="compile module google-play-services_lib; test classes" unless="skip.tests"/>
  
  <target name="clean.module.google-play-services_lib" description="cleanup module">
    <delete dir="${google-play-services_lib.output.dir}"/>
    <delete dir="${google-play-services_lib.testoutput.dir}"/>
  </target>
  
  
  <!-- Module NaviMap -->
  
  <dirname property="module.navimap.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.navimap" value="${jdk.home.android_api_17_platform}"/>
  <property name="module.jdk.bin.navimap" value="${jdk.bin.android_api_17_platform}"/>
  <property name="module.jdk.classpath.navimap" value="jdk.classpath.android_api_17_platform"/>
  
  <property name="compiler.args.navimap" value="-encoding windows-1251 -source 1.6 ${compiler.args}"/>
  
  <property name="navimap.output.dir" value="${module.navimap.basedir}/bin/classes"/>
  <property name="navimap.testoutput.dir" value="${module.navimap.basedir}/bin/classes"/>
  
  <path id="navimap.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="navimap.module.production.classpath">
    <path refid="${module.jdk.classpath.navimap}"/>
    <pathelement location="${google-play-services_lib.output.dir}"/>
    <fileset dir="${basedir}/libs">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  <path id="navimap.runtime.production.module.classpath">
    <pathelement location="${navimap.output.dir}"/>
    <path refid="google-play-services_lib.runtime.production.module.classpath"/>
    <fileset dir="${basedir}/libs">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  <path id="navimap.module.classpath">
    <path refid="${module.jdk.classpath.navimap}"/>
    <pathelement location="${navimap.output.dir}"/>
    <pathelement location="${google-play-services_lib.testoutput.dir}"/>
    <pathelement location="${google-play-services_lib.output.dir}"/>
    <fileset dir="${basedir}/libs">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  <path id="navimap.runtime.module.classpath">
    <pathelement location="${navimap.output.dir}"/>
    <path refid="google-play-services_lib.runtime.module.classpath"/>
    <fileset dir="${basedir}/libs">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  
  <patternset id="excluded.from.module.navimap">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.navimap">
    <patternset refid="excluded.from.module.navimap"/>
  </patternset>
  
  <path id="navimap.module.sourcepath">
    <dirset dir="${module.navimap.basedir}">
      <include name="src"/>
      <include name="gen"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.navimap" depends="compile.module.navimap.production,compile.module.navimap.tests" description="Compile module NaviMap"/>
  
  <target name="compile.module.navimap.production" depends="register.custom.compilers,compile.module.google-play-services_lib" description="Compile module NaviMap; production classes">
    <mkdir dir="${navimap.output.dir}"/>
    <javac2 destdir="${navimap.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.navimap}/javac">
      <compilerarg line="${compiler.args.navimap}"/>
      <bootclasspath refid="navimap.module.bootclasspath"/>
      <classpath refid="navimap.module.production.classpath"/>
      <src refid="navimap.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.navimap"/>
    </javac2>
    
    <copy todir="${navimap.output.dir}">
      <fileset dir="${module.navimap.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.navimap.basedir}/gen">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.navimap.tests" depends="register.custom.compilers,compile.module.navimap.production" description="compile module NaviMap; test classes" unless="skip.tests"/>
  
  <target name="clean.module.navimap" description="cleanup module">
    <delete dir="${navimap.output.dir}"/>
    <delete dir="${navimap.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.google-play-services_lib, clean.module.navimap" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.google-play-services_lib, compile.module.navimap" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>